@model List<Shirt>
@{
    ViewData["Title"] = "Shirts Page";
}

<h3 class="display-3 text-center mb-3">Shirts</h3>
<a class="btn btn-sm btn-primary mb-2" asp-controller="shirts" asp-action="createshirt"><i class="fa-solid fa-plus"></i> Create Shirt</a>
<table class="table table-striped table-bordered table-sm">
    <thead>
        <tr class="table-primary">
            <td>Brand</td>
            <td>Gender</td>
            <td>Color</td>
            <td>Size</td>
            <td>Price</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach(var shirt in Model)
        {
            <tr>
                <td>@shirt.Brand</td>
                <td>@shirt.Gender</td>
                <td>@shirt.Color</td>
                <td>@shirt.Size</td>
                <td>@(shirt.Price.HasValue ? shirt.Price.Value.ToString("c") : "")</td>
                <td>
                    <a class="btn btn-sm btn-secondary"><i class="fa-solid fa-pencil" asp-controller="shirts" asp-action="updateshirt"></i> Edit</a>
                    <a class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>